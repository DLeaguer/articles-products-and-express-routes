{{#with productToEdit}}
<form action="/products/{{id}}?_method=PUT" method="post">
  <h3>
    <label>EDIT PRODUCTS</label>
  </h3>
  <label>Name:
    <input type="text" name='product' id=''>
  </label>
  <br><br>
  <label>Price:
    <input type="number" oninput="$" min=0 step=0.01 name='price' id=''>
  </label>
  <br><br>
  <label>Inventory:
    <input type="number" min=0 name='inventory' id=''>
  </label>
  <br><br>
  <label>
    <input type="submit" value='Submit' >
  </label>
  <br><br>
  <a href="/productsHome/">Back to Products</a>
  {{/with}}
</form>

